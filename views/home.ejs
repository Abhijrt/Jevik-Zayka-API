<link rel="stylesheet" href="css/home.css">
<section class="container-fluid col-sm-11 col-xs-12" id="product-section">
    <% if(fruits.length > 0) { %> 
    <div class="container-fluid mt-2">
        <div>
            <h1>Fruit</h1>
        </div>
        <div class="container-fluid mt-2">
            <div class="row">
                <% for(var fruit of fruits) { %>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 mt-2">
                    <div class="card">
                        <img class="cart-image" src="<%=fruit.product_image %>" alt="Dheeraj">
                        <div class="card-body">
                            <h5><%=fruit.product_name %></h5>
                            <div style="display: flex;">
                                <h5>RS <%= fruit.price%></h5>
                                <h6 style="text-decoration:line-through; color:greenyellow"><%= fruit.discount %>%</h6>
                            </div>
                            <form action="">
                                <label for="cars">Quantity</label>
                                <select name="quantity" id="quantity">
                                  <option value="1">1</option>
                                  <option value="2">2</option>
                                  <option value="3">3</option>
                                  <option value="4">4</option>
                                </select>
                                <input type="hidden" id="<%= fruit._id %>" data-value="12345">
                                <% if(fruit.stock_quantity < 250) { %>
                                    <small style="color:red">Out of Stock</small>
                                    <input class="btn btn-warning cart-button" type="submit" value="Add to Cart" disabled>
                                <%} else {%> 
                                <input class="btn btn-warning cart-button" type="submit" value="Add to Cart">
                                <% } %>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    <% } %>
    <% if(vegetables.length > 0) { %> 
    <div class="container-fluid mt-2">
        <div>
            <h1>Vegetable</h1>
        </div>
        <div class="container-fluid mt-2">
            <div class="row">
                <% for(var vegetable of vegetables) { %>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 mt-2">
                    <div class="card">
                        <img class="cart-image" src="<%=vegetable.product_image %>" alt="Dheeraj">
                        <div class="card-body">
                            <h5><%=vegetable.product_name %></h5>
                            <div style="display: flex;">
                                <h5>RS <%= fruit.price %></h5>
                                <h6 style="text-decoration:line-through; color:greenyellow"><%= vegetable.discount %>%</h6>
                            </div>
                            <form action="">
                                <label for="quantity">Quantity</label>
                                <select name="quantity" id="quantity">
                                  <option value="1">1</option>
                                  <option value="2">2</option>
                                  <option value="3">3</option>
                                  <option value="4">4</option>
                                </select>
                                <input type="hidden" id="<%= vegetable._id %>" data-value="12345">
                                <% if(vegetable.stock_quantity < 250) { %>
                                    <small style="color:red">Out of Stock</small>
                                    <input class="btn btn-warning cart-button" type="submit" value="Add to Cart" disabled>
                                <%} else {%> 
                                <input class="btn btn-warning cart-button" type="submit" value="Add to Cart">
                                <% } %>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    <% } %>
</section>